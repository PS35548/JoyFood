@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<Product>
<!-- HEADER -->
    <header>
        <div class="container">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/1LayoutAdmin/image/banner_1.jpg" class="d-block w-100" alt="banner1">
                    </div>
                    <div class="carousel-item">
                    <img src="~/1LayoutAdmin/image/banner_1.jpg" class="d-block w-100" alt="banner2">
                    </div>
                    <div class="carousel-item">
                    <img src="~/1LayoutAdmin/image/banner_1.jpg" class="d-block w-100" alt="banner3">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                        data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                        data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>

    </header>
<div class="container">
    <div class="row py-5">
        <div class="col-md-12 text-center py-2">
            <h3 class="text-uppercase">Hot!!!!</h3>
        </div>
        <hr />
        <div class="col-md-12">
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4">
                @foreach (var item in Model.Take(8))
                {
                    <div class="col mb-3">
                        <div class="px-2 d-flex justify-content-center">
                            <div class="card text-center">
                                <div class="featured__item__pic set-bg" data-setbg="@Url.Content("../1LayoutAdmin/image/" + item.Img)">
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">@item.ProductName</h5>
                                    <img src="~/1LayoutAdmin/image/@item.Img" height="200px" width="200px" />
                                    <p class="card-text text-danger"><strong>@item.Price</strong></p>
                                    <form method="post" asp-controller="Cart" asp-action="Buy" asp-route-id="@item.ProductId">
                                        <button type="submit" class="btn btn-outline-success btn-sm">Thêm vào giỏ</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                }
                <div class="product__pagination">
                    @Html.PagedListPager(Model, page=>Url.Action("Index", new{page=page}))
                </div>
                
            </div>
        </div>
    </div>
</div>
